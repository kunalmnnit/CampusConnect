<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostAndFound.itemDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:id="@+id/item_detail_image"></ImageView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Category"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/item_detail_item_category"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14dp"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Address"
                android:textSize="16dp"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="#000000"
                android:id="@+id/item_detail_item_address"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By"
                android:textSize="14dp"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/item_detail_item_postedBy"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Me"

                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="14dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Contact"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/item_detail_item_contactMe"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Description"
                    android:textSize="16dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:id="@+id/item_detail_item_description"></TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>